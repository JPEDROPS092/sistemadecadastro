# Exemplo de arquivo .env - Copie para .env e configure suas variáveis

# Configurações da aplicação
FLASK_APP=run.py
FLASK_ENV=production
FLASK_DEBUG=False

# Chave secreta (IMPORTANTE: Use uma chave única e segura em produção)
SECRET_KEY=sua-chave-secreta-muito-segura-aqui

# Configuração do banco de dados
DATABASE_URL=sqlite:///estoque.db

# Porta da aplicação (Railway usa a variável PORT automaticamente)
PORT=8080